<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<VersionPrefix>1.2.0</VersionPrefix>
		<Description>A library designed for retrieving information about any musical release available in MusicBrainz open database.</Description>
		<Authors>Roman Sinclair</Authors>
		<PackageTags>musicbrainz;release;api;releaselib;library;album</PackageTags>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
		<Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
		<ProjectGuid>{C16D1944-3DBC-465A-8679-ED0A986D68C9}</ProjectGuid>
		<OutputType>Library</OutputType>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RootNamespace>ReleaseLib</RootNamespace>
		<AssemblyName>ReleaseLib</AssemblyName>
		<TargetFramework>net5.0</TargetFramework>

		<GenerateAssemblyVersionAttribute>true</GenerateAssemblyVersionAttribute>
		<AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
		<Deterministic>true</Deterministic>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
		<IsPackable>true</IsPackable>
	</PropertyGroup>

	<PropertyGroup>
		<!-- Optional: Publish the repository URL in the built .nupkg (in the NuSpec <Repository> element) -->
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
	</PropertyGroup>
	
	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
	</ItemGroup>
</Project>